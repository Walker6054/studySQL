<div class="mainBlock">
    <div class="row rowHeader">
        <h2 class="mainHeader">Регистрация - Преподаватель</h2>
    </div>
    <form class="row rowForm needs-validation" novalidate>
        <div class="row rowForm1 mb-3">
            <div class="col-6 colForm">
                <div class="form-floating">
                    <input type="text" class="form-control" id="inputLogin" placeholder=" "/>
                    <label for="inputLogin">Логин<span class="needed">*</span></label>
                    <div class="invalid-feedback"> Обязательно к заполнению! </div>
                </div>
            </div>
            <div class="col-6 colForm">
                <span class="needed">*</span> - поля обязательные к заполнению!
            </div>
        </div>
        <div class="row rowForm2 mb-3">
            <div class="col-6 colForm">
                <div class="form-floating">
                    <input type="email" class="form-control" id="inputEmail" placeholder=" "/>
                    <label for="inputEmail">Email<span class="needed">*</span></label>
                    <div class="invalid-feedback"> Обязательно к заполнению! </div>
                </div>
            </div>
            <div class="col-6 colForm"></div>
        </div>
        <div class="row rowForm3 mb-3">
            <div class="col-6 colForm">
                <div class="form-floating">
                    <input type="password" class="form-control" id="inputPass" placeholder=" " />
                    <label for="inputPass">Пароль<span class="needed">*</span></label>
                    <div class="invalid-feedback"> Обязательно к заполнению! </div>
                </div>
            </div>
            <div class="col-6 colForm"></div>
        </div>
        <div class="row rowForm3">
            <div class="col-6 colForm">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="checkPass" />
                    <label class="form-check-label" for="checkPass"> Показать пароль </label>
                </div>
            </div>
            <div class="col-6 colForm"></div>
        </div>
        <div class="row rowForm4 mb-3">
            <div class="col-6 colForm">
                <div class="form-floating">
                    <input type="text" class="form-control" id="inputInst" placeholder=" " />
                    <label for="inputInst">Институт<span class="needed">*</span></label>
                    <div class="invalid-feedback"> Обязательно к заполнению! </div>
                </div>
            </div>
            <div class="col-6 colForm"></div>
        </div>
        <div class="row rowForm5 mb-3">
            <div class="col-6 colForm">
                <div class="form-floating">
                    <input type="text" class="form-control" id="inputF" placeholder=" " />
                    <label for="inputF">Фамилия<span class="needed">*</span></label>
                    <div class="invalid-feedback"> Обязательно к заполнению! </div>
                </div>
            </div>
            <div class="col-6 colForm"></div>
        </div>
        <div class="row rowForm6 mb-3">
            <div class="col-6 colForm">
                <div class="form-floating">
                    <input type="text" class="form-control" id="inputI" placeholder=" " />
                    <label for="inputI">Имя<span class="needed">*</span></label>
                    <div class="invalid-feedback"> Обязательно к заполнению! </div>
                </div>
            </div>
            <div class="col-6 colForm"></div>
        </div>
        <div class="row rowForm7 mb-3">
            <div class="col-6 colForm">
                <div class="form-floating">
                    <input type="text" class="form-control" id="inputO" placeholder=" " />
                    <label for="inputO">Отчество</label>
                </div>
            </div>
            <div class="col-6 colForm"></div>
        </div>
        <div class="row rowForm8 mb-3">
            <div class="col-6 colForm">
                <button type="button" data-bs-dismiss="modal" id="buttonReg" class="btn btn-outline-success">Зарегистрироваться</button>
            </div>
        </div>
    </form>
</div>