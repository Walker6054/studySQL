<div class="mainBlock">
    <div class="row rowHeader">
        <h2 class="mainHeader">{{text}}</h2>
    </div>
    {{#if not_wrong_time}}
        <div class="row rowForm">
            <div class="row rowForm mb-3">
                <div class="col-6 colForm">
                    <div class="form-floating">
                        <input type="password" class="form-control" id="inputPass1" placeholder=" " />
                        <label for="inputPass1">Новый пароль</label>
                        <div id="feedback_pass1" class="invalid-feedback"></div>
                    </div>
                </div>
                <div class="col-6 colForm"></div>
            </div>

            <div class="row rowForm mb-3">
                <div class="col-6 colForm">
                    <div class="form-floating">
                        <input type="password" class="form-control" id="inputPass2" placeholder=" " />
                        <label for="inputPass2">Повторите пароль</label>
                        <div id="feedback_pass2" class="invalid-feedback"></div>
                    </div>
                </div>
                <div class="col-6 colForm"></div>
            </div>

            <div class="row rowForm mb-3">
                <div class="col-6 colForm">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="checkPass" />
                        <label class="form-check-label" for="checkPass"> Показать пароль </label>
                    </div>
                </div>
                <div class="col-6 colForm"></div>
            </div>

            <div class="row rowForm mb-3">
                <div class="col-6 colForm">
                    <button type="button" id="buttonRecovery" class="btn btn-outline-success">Восстановить</button>
                </div>
            </div>
        </div>
    {{/if}}
</div>